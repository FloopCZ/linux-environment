#!/bin/sh
dst=${1:-/backup.tar.xz}

# A simple script to backup the whole system using tar.

tar --exclude="/dev/*" \
    --exclude="/proc/*" \
    --exclude="/sys/*" \
    --exclude="/tmp/*" \
    --exclude="/run/*" \
    --exclude="/mnt/*" \
    --exclude="/media/*" \
    --exclude="/lost+found" \
    --exclude="/home/floop/Downloads/*" \
    --exclude="$dst" \
    --xattrs \
    -cpvJf "$dst" \
    /*
