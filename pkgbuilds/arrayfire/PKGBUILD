# Modified from the community package by Sven-Hendrik Haase <sh@lutzhaase.com>
pkgname=arrayfire
pkgdesc="High performance software library for parallel computing with an easy-to-use API"
url='https://arrayfire.com'
pkgver=3.6
arch=('x86_64')
pkgrel=1
license=('BSD')
makedepends=('cmake' 'opencl-headers' 'glfw' 'glew' 'boost' 'git' 'python' 'ocl-icd' 'gcc6')
makedepends_x86_64=('cuda' 'nvidia-utils')
depends=('cblas' 'fftw' 'boost-libs' 'lapacke' 'forge' 'freeimage' 'glfw' 'glew')
optdepends=('cuda: Required for using CUDA backend'
            'nvidia-utils: Required for using CUDA backend'
            'libclc: Required for using OpenCL backend')
source=(git+https://github.com/arrayfire/arrayfire)
md5sums=('SKIP')
provides=('arrayfire')
conflicts=('arrayfire')

prepare() {
  cd "${srcdir}/arrayfire"

  # patches here
  sed -i "/NVCC does not support GCC version 6.0/d" src/backend/cuda/CMakeLists.txt
}

build() {
  cd "${srcdir}/arrayfire"
  git submodule init
  git submodule update

  # rm -rf build
  mkdir -p build && cd build

  export CC=gcc-6
  export CXX=g++-6
  cmake .. \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release \
      -DAF_BUILD_CUDA=ON \
      -DAF_BUILD_CPU=ON \
      -DAF_BUILD_OPENCL=ON \
      -DAF_OPENCL_BLAS_LIBRARY=CLBlast \
      -DAF_BUILD_EXAMPLES=ON \
      -DAF_BUILD_DOCS=OFF \
      -DAF_WITH_NONFREE=ON \
      -DAF_WITH_GRAPHICS=ON \
      -DAF_USE_SYSTEM_FORGE=ON \
      -DBUILD_TESTING=OFF

  make -j8
}

check() {
  cd "${srcdir}/arrayfire/build"
  # some tests are failing :-(
  # make test
}

package() {
  cd "${srcdir}/arrayfire"
  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
  cd build
  make DESTDIR="${pkgdir}/" install
}
